        <ImageView
            android:id="@+id/c4_04"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_blank"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/c4_10"
            android:layout_width="50sp"
