            android:src="@drawable/ic_blank"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/c4_30"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_blank"/>
        <ImageView
            android:id="@+id/c4_31"
