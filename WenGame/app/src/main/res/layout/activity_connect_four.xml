            android:src="@drawable/ic_blank"/>

    </LinearLayout>

    <TextView
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:id="@+id/c4_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/game_result_will_be_shown_here"
        android:textSize="22sp"
        android:textColor="#1894e1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/c4_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/replay"/>

        <Button
            android:id="@+id/c4_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_game_home"
            android:onClick="backToHome"
            />

    </LinearLayout>

</LinearLayout>
